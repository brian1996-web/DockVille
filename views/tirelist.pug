doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')

h1 Check out the data
 
.container-fluid
        .col-md-12
          div
        .col
              table.table.table-striped.table-responsive
                thead.bg-secondary
                  tr
                    th Username
                    th Date
                    th NIN
                    th Tire Size
                    th Email
                    th Make
                    th Tire Model
                    th Revenue
                    th Pasword
                    th Delete
                    th Edit
                tbody

                  if tires.length
                      each tire in tires 
                        tr      
                          td #{tire.username}
                          td #{tire.date}
                          td #{tire.nin}
                          td #{tire.receipt}
                          td #{tire.email}
                          td #{tire.gender}
                          td #{tire.model}
                          td #{tire.revenue}
                          td #{tire.password}
                          td
                              form(action="/api/tire/delete" method="POST")
                                  input(type="hidden" name="id" value=tire._id)
                                  button.btn.btn-danger(type="submit") Delete
                          td
                              a.btn.btn-warning(href="/api/tire/edit/"+tire._id) Edit
                              
                              //- a(href=`/api/tire/edit${tire._id}`) Edit
                  else 
                    p there are no trucks in the database
                

